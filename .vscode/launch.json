{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/src",
      "env": {
        "AWS_SAM_LOCAL": "TRUE",
        "LOG_LEVEL": "DEBUG"
      },
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8080"
      ],
      "jinja": true,
      "justMyCode": false
    }
  ]
}
